.basic-slider {
  display: flex;
  position: relative;

  &__slide-wrapper {
    width: 100%;
    height: 150px;
    background-color: $block-bg;
    text-align: center;
  }

  &__slide {
    width: 100%;
    height: 150px;
    display: flex;
    justify-content: center;
    align-items: center;

    span {
      color: $font-emphasis;
      font-size: 26px;
      height: 40px;
    }
  }

  i.left,
  i.right {
    z-index: 2;
    height: 150px;
    position: absolute;
    display: flex;
    align-items: center;
    font-size: 68px;
    color: $font-emphasis;

    &:hover {
      cursor: pointer;
    }
  }

  i.left {
    left: 0;
  }
  i.right {
    right: 0;
  }
}