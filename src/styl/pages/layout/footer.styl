.footer {
  padding: 40px 0;
  color: white;
  background-color: $block-bg;

  &__wrapper {
    flex-shrink: 0;
    background-color: $block-bg;
  }

  &__logo-wrapper {
    width: 25%;

    img {
      width: 100%;
    }
  }

  &__nav-wrapper {
    padding-bottom: 20px;
    margin-bottom: 20px;
    border-bottom: 2px solid $cornflower;

    .nav {
      display: flex;

      &__item {
        padding: 15px 20px;
        color: white;
        text-transform: uppercase;
        text-decoration: none;

        &--active,
        &:hover {
          background-color: $perolus;
        }
      }
    }
  }

  &__info-section {
    display: flex;
    justify-content: space-between;

    .info-block {
      width: 193px;

      &__header {
        border-bottom: 2px solid $cornflower;
        padding-bottom: 2px;
        margin-bottom: 16px;

        span {
          font: 20px $base-font-family-black;
        }
      }

      .info-block-string {
        display: flex;
        justify-content: space-between;
        font: 14px $base-font-family-light;
        margin-bottom: 2px;
      }
    }

    .social-icons {
      display: flex;
      justify-content: center;

      &__item {
        padding: 8px;
        font-size: 30px;
        color: white;
        text-decoration: none;

        &:hover {
          color: $font-emphasis;
        }
      }
    }
  }

  &__copyrights {
    font: 14px $base-font-family-light;

    span {
      display: block;
    }

    .copyrights {
      &__items {
        margin-bottom: 14px;
      }

      &__designed-by {
        a {
          color: white;
          font-weight: regular;

          &:hover {
            color: $font-emphasis;
          }
        }

      }
    }
  }
}